<?xml version="1.0" encoding="UTF-8"?>
<rspec xmlns="http://www.geni.net/resources/rspec/3" type="request">
  <!-- Define a node to run the monitoring script -->
  <node client_id="node1">
    <sliver_type name="emulab-base" />
    <!-- Replace with an appropriate disk image for your site -->
<disk_image name="urn:publicid:IDN+emulab.net+image+debian10-64-minimal" />
    <services>
      <!-- This service executes when the node boots. It clones your Git repo and starts the script -->
      <execute command="
          cd /local;
          if [ ! -d repository ]; then
            git clone https://github.com/TylerGeiger513/NetworkWatcher.git repository;
          else
            cd repository && git pull;
          fi;
          bash repository/monitor.sh &
      " />
    </services>
  </node>
</rspec>
